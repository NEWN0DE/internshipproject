@using CountryCity.Models;

@model List<Country>

@{
	ViewData["Title"] = "Page4";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Page4</title>
</head>
<body>
	<h2>This is Page4</h2>

	<table class="table">
		<thead>
			<tr>

				<th>
					Country
				</th>
				<th>
					Capital

				</th>
				<th>
					Population
				</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				@foreach (var item in Model)
				{
					<tr>

						<td>
							@item.Name
						</td>
						<td>
							@item.Capital
						</td>
						<td>
							@item.Population
						</td>
					</tr>
				}
			}
		</tbody>
	</table>


</body>
</html>

